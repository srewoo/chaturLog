# ChaturLog Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ==================== Security ====================
# JWT Secret Key - CHANGE THIS IN PRODUCTION!
# Generate a secure random key: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-change-in-production-to-a-secure-random-string

# ==================== CORS Configuration ====================
# Comma-separated list of allowed origins
# Development
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
# Production example: https://chaturlog.yourdomain.com

# ==================== Server Configuration ====================
HOST=0.0.0.0
PORT=8001

# ==================== Database ====================
# SQLite database path (relative to backend directory)
DATABASE_PATH=./chaturlog.db

# ==================== File Upload ====================
# Upload directory path
UPLOAD_DIR=./uploads
# Maximum file size in MB
MAX_FILE_SIZE_MB=50

# ==================== API Keys (Optional - Deprecated) ====================
# NOTE: API keys are now configured per-user in the Settings page
# These environment variables are no longer used but kept for reference
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# GOOGLE_API_KEY=AIza...

# ==================== Logging ====================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ==================== Development Settings ====================
# Set to true for development mode
DEBUG=false
# Auto-reload on code changes (uvicorn)
RELOAD=false

# ==================== Notes ====================
# 1. Never commit the actual .env file to git
# 2. API keys are now configured per-user in the application Settings page
# 3. Each user manages their own OpenAI, Anthropic, and Google AI keys
# 4. Generate a strong JWT_SECRET_KEY using: openssl rand -hex 32
# 5. Update CORS_ORIGINS to match your frontend URL in production
